{
  "name": "inventory",
  "version": "0.0.1",
  "description": "",
  "author": "charlie.bean@wiooh.com",
  "private": true,
  "license": "Apache License 2.0",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:apis": "nest start --entryFile main-apis",
    "start:apis:dev": "nest start --watch --entryFile main-apis",
    "start:apis:debug": "nest start --debug --watch --entryFile main-apis",
    "start:apis:prod": "node dist/main-apis",
    "start:consumers": "nest start --watch --entryFile main-consumers",
    "start:consumers:dev": "nest start --watch --entryFile main-consumers",
    "start:consumers:debug": "nest start --debug --watch --entryFile main-consumers",
    "start:consumers:prod": "node dist/main-consumers",
    "start": "npm run start:apis",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "npm run migrate:up",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:make": "knex migrate:make",
    "migrate:up": "cross-env ENVIRONMENT=dev knex migrate:latest",
    "migrate:up:prod": "knex migrate:latest",
    "migrate:rollback": "cross-env ENVIRONMENT=dev knex migrate:rollback",
    "migrate:rollback:all": "cross-env ENVIRONMENT=dev knex migrate:rollback --all",
    "migrate:rollback:prod": "cross-env ENVIRONMENT=dev knex migrate:rollback",
    "seed-dev": "cross-env ENVIRONMENT=dev knex seed:run"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.3",
    "@nestjs/typeorm": "^9.0.1",
    "babel-jest": "^29.2.2",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "husky": "^8.0.2",
    "jest-mock": "^29.2.2",
    "knex": "^2.3.0",
    "nest-winston": "^1.8.0",
    "path": "^0.12.7",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "temporalio": "^1.4.4",
    "typeorm": "^0.3.10",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.18.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        "babel-jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
